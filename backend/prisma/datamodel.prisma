type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  password: String!
  avatar: String
  posts: [Post!]!
  comments: [Comment!]!
  following: [User!]! @relation(name: "Following")
  followers: [User!]! @relation(name: "Followers")
}

type Post {
  id: ID! @id
  content: String!
  postedBy: User!
  createdAt: DateTime! @createdAt
  comments: [Comment!]!
}

type Comment {
  id: ID! @id
  content: String!
  postedOn: Post!
  postedBy: User!
  createdAt: DateTime! @createdAt
}
